{
  "name": "perfectionist",
  "version": "2.4.0",
  "description": "Beautify CSS files.",
  "main": "dist/index.js",
  "bin": {
    "perfectionist": "bin/cmd.js"
  },
  "files": [
    "bin",
    "LICENSE-MIT",
    "dist"
  ],
  "scripts": {
    "pretest": "eslint src",
    "prepublish": "del-cli dist && cross-env BABEL_ENV=publish babel src --out-dir dist --ignore /__tests__/",
    "report": "nyc report --reporter=html",
    "test": "cross-env BABEL_ENV=test nyc ava",
    "test-012": "cross-env BABEL_ENV=test nyc ava"
  },
  "keywords": [
    "beautify",
    "css",
    "format",
    "postcss",
    "postcss-plugin",
    "pretty"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ben-eb/perfectionist",
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "repository": "ben-eb/perfectionist",
  "dependencies": {
    "comment-regex": "^1.0.0",
    "defined": "^1.0.0",
    "minimist": "^1.2.0",
    "postcss": "^5.0.8",
    "postcss-scss": "^0.3.0",
    "postcss-value-parser": "^3.3.0",
    "read-file-stdin": "^0.2.0",
    "string.prototype.repeat": "^0.2.0",
    "vendors": "^1.0.0",
    "write-file-stdout": "0.0.2"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.9.0",
    "cross-env": "^3.1.2",
    "del-cli": "^0.2.0",
    "eslint": "^3.0.0",
    "eslint-config-cssnano": "^3.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "execa": "^0.4.0",
    "nyc": "^10.0.0"
  },
  "ava": {
    "babel": "inherit",
    "require": "babel-register"
  },
  "eslintConfig": {
    "extends": "cssnano"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "**/__tests__"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
